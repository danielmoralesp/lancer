	<section class=" job-bg page  ad-profile-page">
		<div class="container">
			<div class="breadcrumb-section">
				<ol class="breadcrumb">
					<li><a href="index.html">Home</a></li>
					<li>My Gigs</li>
				</ol>
				<h2 class="title">Applied Gigs</h2>
			</div><!-- breadcrumb-section -->

			<div class="job-profile section">
				<div class="user-profile">
					<div class="user-images">
						<img src="/assets/user.jpg" alt="User Images" class="img-responsive">
					</div>
					<div class="user">
						<h2>Hello, <a href="#">Jhon Doe</a></h2>
						<h5>You last logged in at: 10-01-2017 6:40 AM [ USA time (GMT + 6:00hrs)]</h5>
					</div>

					<div class="favorites-user">
						<div class="my-ads">
							<a href="applied-job.html"><%= @gigs.count %><small>Apply Gigs</small></a>
						</div>
					</div>
				</div><!-- user-profile -->

				<ul class="user-menu">
					<li><a href="profile.html">Account Info </a></li>
					<li><a href="resume.html">View Resume</a></li>
					<li><a href="edit-resume.html">Edit Resume</a></li>
					<li><a href="profile-details.html">Profile Details</a></li>
					<li><a href="bookmark.html">Bookmark</a></li>
					<li class="active"><a href="applied-job.html">applied job</a></li>
					<li><a href="delete-account.html">Close account</a></li>
				</ul>
			</div><!-- ad-profile -->

			<div class="section trending-ads latest-jobs-ads">
				<h4>My Gigs</h4>

        <% @gigs.each do |gig| %>
				<div class="job-ad-item">
					<div class="item-info">
						<div class="item-image-box">
							<div class="item-image">
								<a href="job-details.html"><img src="/assets/job/4.png" alt="Image" class="img-responsive"></a>
							</div><!-- item-image -->
						</div>

						<div class="ad-info">
							<span><a href="job-details.html" class="title"><%= gig.category.name %></a> @
                <%= link_to gig.name, gig%>
              </span>
							<div class="ad-meta">
								<ul>
									<li><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i><%= gig.location %> </a></li>
									<li><a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i>Full Time</a></li>
									<li><a href="#"><i class="fa fa-money" aria-hidden="true"></i>$<%= gig.budget %></a></li>
                  <% if gig.open %>
                    <li><a href="#"><i class="fa fa-tags" aria-hidden="true"></i>Open</a></li>
                  <% else %>
                    <li><a href="#"><i class="fa fa-tags" aria-hidden="true"></i>Close</a></li>
                  <% end %>
                  <li><a href="#"><i class="fa fa-tags" aria-hidden="true"></i><%= gig.proposals.count %></a></li>
                  <li><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i><%= link_to "Edit", edit_gig_path(gig.id) %> </a></li>
								</ul>
							</div><!-- ad-meta -->
						</div><!-- ad-info -->
						<div class="close-icon">
							<i class="fa fa-close" aria-hidden="true"></i><%= link_to "Delete", gig, method: :delete, data: {confirm: "Are you sure?"} %>
						</div>
					</div><!-- item-info -->
				</div><!-- ad-item -->
        <% end %>
			</div><!-- latest-jobs-ads -->
		</div><!-- container -->
	</section><!-- ad-profile-page -->

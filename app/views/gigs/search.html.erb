<div class="banner-job">
  <div class="banner-overlay"></div>
  <div class="container text-center">
    <h1 class="title">The Easiest Way to Get Your New Job</h1>
    <h3>We offer 12000 jobs vacation right now</h3>
    <div class="banner-form">
      <%= form_tag search_gigs_path, method: :get do |f|  %>
        <%= text_field_tag :search, nil, class: "form-control", placeholder: "Type your key word" %>
        <%= button_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div><!-- banner-form -->

    <ul class="banner-socail list-inline">
      <li><a href="#" title="Facebook"><i class="fa fa-facebook"></i></a></li>
      <li><a href="#" title="Twitter"><i class="fa fa-twitter"></i></a></li>
      <li><a href="#" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
      <li><a href="#" title="Youtube"><i class="fa fa-youtube"></i></a></li>
    </ul><!-- banner-socail -->
  </div><!-- container -->
</div><!-- banner-section -->

<div class="page">
  <div class="container">
    <section class=" page job-list-page">
      <div class="container">
        <div class="category-info">
          <div class="row">
            <div class="col-md-3 col-sm-4">
              <div class="accordion">
                <!-- panel-group -->
                <div class="panel-group" id="accordion">

                  <!-- panel -->
                  <div class="panel panel-default panel-faq">
                    <!-- panel-heading -->
                    <div class="panel-heading">
                      <div class="panel-title"></div>
                      <a data-toggle="collapse" data-parent="#accordion" href="#accordion-six">
                        <h4>Advance Search<span class="pull-right"><i class="fa fa-plus"></i></span></h4>
                      </a>
                    </div><!-- panel-heading -->

                    <div id="accordion-six" class="panel-collapse collapse in">
                      <!-- panel-body -->
                      <div class="panel-body">
                        <%= form_tag search_gigs_path, method: :get do |f| %>
                          <span>Search</span>
                          <%= text_field_tag :search, nil, class: "form-control", placeholder: "Developer, Accountant, etc." %>
                          <span>Category</span><br><br>
                          <%= select_tag :category, options_from_collection_for_select(Category.all, :id, :name), class: "form-control" %> <br>
                          <span>Location</span>
                          <%= text_field_tag :location, nil, class: "form-control", placeholder: "Denver, Miami, etc." %>
                          <%= submit_tag "Search", class: "btn btn-primary" %>
                        <% end %>
                      </div><!-- panel-body -->
                    </div>
                  </div> <!-- panel -->
                 </div><!-- panel-group -->
              </div>
            </div><!-- accordion-->

            <!-- recommended-ads -->
            <div class="col-sm-8 col-md-9">
              <div class="section job-list-item">
                <div class="featured-top">
                  <h4>Showing 1-25 of 65,712 ads</h4>
                  <div class="dropdown pull-right">
                    <div class="dropdown category-dropdown">
                      <h5>Sort by:</h5>
                      <a data-toggle="dropdown" href="#"><span class="change-text">Most Relevant</span><i class="fa fa-caret-square-o-down"></i></a>
                      <ul class="dropdown-menu category-change">
                        <li><a href="#">Most Relevant</a></li>
                        <li><a href="#">Most Popular</a></li>
                      </ul>
                    </div><!-- category-change -->
                  </div>
                </div><!-- featured-top -->

                <% @gigs.each do |gig| %>
                <div class="job-ad-item">
                  <div class="item-info">
                    <div class="ad-info">
                      <span><a href="job-details.html" class="title">Project Manager</a> @ <%= link_to gig.name, gig %></span>
                      <div class="ad-meta">
                        <ul>
                          <li><a href="#"><i class="fa fa-map-marker" aria-hidden="true"></i><%= gig.location %> </a></li>
                          <li><a href="#"><i class="fa fa-clock-o" aria-hidden="true"></i>Full Time</a></li>
                          <li><a href="#"><i class="fa fa-money" aria-hidden="true"></i>$<%= gig.budget %></a></li>
                        </ul>
                      </div><!-- ad-meta -->
                    </div><!-- ad-info -->
                    <div class="button">
    									<a href="#" class="btn btn-primary">Apply Now</a>
    								</div>
                  </div><!-- item-info -->
                </div><!-- job-ad-item -->
                <% end %>

                <!-- pagination  -->
                <div class="text-center">
                  <%= paginate @gigs %>
                </div><!-- pagination  -->
              </div>
            </div><!-- recommended-ads -->
          </div>
        </div>
      </div><!-- container -->
    </section><!-- main -->

    <div class="section cta cta-two text-center">
      <div class="row">
        <div class="col-sm-4">
          <div class="single-cta">
            <div class="cta-icon icon-jobs">
              <img src="/assets/icon/31.png" alt="Icon" class="img-responsive">
            </div><!-- cta-icon -->
            <h3>3,412</h3>

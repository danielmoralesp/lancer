<!-- header -->
<header id="header" class="clearfix">
  <!-- navbar -->
  <nav class="navbar navbar-default">
    <div class="container">
      <!-- navbar-header -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag("/assets/logo.png", :alt => "Logo", :class => "img-responsive"), root_path, :class => "navbar-brand"%>
      </div>
      <!-- /navbar-header -->

      <div class="navbar-left">
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= active_class(root_path) %>">
              <%= link_to "Home", root_path %>
            </li>
            <li><a href="">Como Funciona</a></li>
            <li><a href="">Sobre Nosotros</a></li>
            <% if user_signed_in? %>
              <li class="<%= active_class(mygigs_path) %>"><%= link_to "MyGigs", mygigs_path %></li>
            <% end %>
          </ul>
        </div>
      </div><!-- navbar-left -->

      <!-- nav-right -->
      <div class="nav-right">
        <ul class="sign-in">
          <li><i class="fa fa-user"></i></li>
          <% if user_signed_in? %>
            <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Register", new_user_registration_path %></li>
          <% end %>
        </ul><!-- sign-in -->

        <%= link_to "Post Your Job", new_gig_path, class: 'btn' %>
      </div>
      <!-- nav-right -->
    </div><!-- container -->
  </nav><!-- navbar -->
</header><!-- header -->
